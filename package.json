{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "sunbeam",
  "title": "Sunbeam",
  "description": "Run Sunbeam Extension from Raycast",
  "type": "module",
  "icon": "command-icon.png",
  "author": "pomdtr",
  "license": "MIT",
  "preferences": [
    {
      "name": "url",
      "title": "Sunbeam URL",
      "description": "Sunbeam URL",
      "type": "textfield",
      "required": true
    },
    {
      "name": "token",
      "title": "Token",
      "description": "Sunbeam Connection Token",
      "type": "password",
      "required": false
    }
  ],
  "commands": [
    {
      "name": "run-command",
      "title": "Search Commands",
      "description": "Search Sunbeam Commands",
      "mode": "view",
      "arguments": [
        {
          "name": "extension",
          "placeholder": "extension",
          "type": "text",
          "required": false
        },
        {
          "name": "command",
          "placeholder": "command",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@pomdtr/sunbeam": "npm:@jsr/pomdtr__sunbeam@^0.0.12",
    "@raycast/api": "^1.73.3",
    "@raycast/utils": "^1.18.1",
    "cross-fetch": "^4.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}